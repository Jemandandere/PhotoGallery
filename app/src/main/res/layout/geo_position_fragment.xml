<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.geoPosition.GeoPositionFragment">

    <TextView
        android:id="@+id/geo_position_position_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/geo_position_empty"
        app:layout_constraintBottom_toTopOf="@+id/geo_position_onoff_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/geo_position_onoff_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/geo_position_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geo_position_position_text" />

</androidx.constraintlayout.widget.ConstraintLayout>